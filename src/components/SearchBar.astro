---
interface Props {
  placeholder?: string;
  buttonText?: string;
}

const {
  placeholder = "What's happening in your life? (e.g., having a baby, moving, starting a business...)",
  buttonText = "Search"
} = Astro.props;
---

<section class="max-w-2xl mx-auto mb-20">
  <div class="relative">
    <input 
      type="text" 
      placeholder={placeholder}
      class="w-full px-6 py-5 text-lg rounded-2xl shadow-lg border-2 border-transparent focus:border-indigo-400 focus:outline-none transition-all"
    />
    <button class="absolute right-3 top-1/2 -translate-y-1/2 bg-indigo-600 text-white px-6 py-3 rounded-xl hover:bg-indigo-700 transition-colors font-medium">
      {buttonText}
    </button>
  </div>
</section>
