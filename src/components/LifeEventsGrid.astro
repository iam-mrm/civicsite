---
import LifeEventCard from './LifeEventCard.astro';

interface LifeEvent {
  id: string;
  emoji: string;
  title: string;
  description: string;
}

interface Props {
  events: LifeEvent[];
}

const { events } = Astro.props;
---

<section class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    events.map((event) => (
      <LifeEventCard
        emoji={event.emoji}
        title={event.title}
        description={event.description}
      />
    ))
  }
</section>
