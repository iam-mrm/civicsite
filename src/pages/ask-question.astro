---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../data/siteConfig';
import { generateSEOProps } from '../utils/seo';

const seoProps = generateSEOProps({
  title: 'Ask a Question - Civic Portal',
  description: 'Get answers to your questions about civic services and life events.'
});
---

<Layout title={seoProps.title || ''}>
  <main class="min-h-screen bg-linear-to-br from-slate-50 via-blue-50 to-indigo-50">
    <div class="max-w-4xl mx-auto px-6 py-16">
      
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="text-5xl mb-4">ðŸ’¬</div>
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">Ask a Question</h1>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Get expert answers to your questions about civic services, life events, and government processes.
        </p>
      </div>

      <!-- Quick Answers -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {[
            {
              q: 'How long does it take to get a birth certificate?',
              a: 'Standard processing takes 2-3 weeks. Expedited options are available for additional fees.'
            },
            {
              q: 'What documents do I need to get married?',
              a: 'You typically need valid photo ID, birth certificate, and social security card. Requirements may vary by location.'
            },
            {
              q: 'How do I change my address after moving?',
              a: 'You can file a change of address online with USPS and update your records with DMV, voter registration, and other agencies.'
            },
            {
              q: 'What are the requirements for starting a business?',
              a: 'Requirements vary by business type and location, but typically include business registration, licenses, and tax identification.'
            }
          ].map((faq, index) => (
            <details class="bg-white rounded-xl border border-slate-100 p-6">
              <summary class="font-semibold text-slate-900 cursor-pointer hover:text-indigo-600 transition-colors">
                {faq.q}
              </summary>
              <p class="mt-3 text-slate-600">{faq.a}</p>
            </details>
          ))}
        </div>
      </section>

      <!-- Question Form -->
      <section class="bg-white rounded-2xl p-8 shadow-sm border border-slate-100">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">Submit Your Question</h2>
        <form id="questionForm" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="category" class="block text-sm font-medium text-slate-700 mb-2">
                Question Category *
              </label>
              <select 
                id="category" 
                name="category" 
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              >
                <option value="">Select a category</option>
                <option value="family">Family Services</option>
                <option value="housing">Housing & Property</option>
                <option value="business">Business & Work</option>
                <option value="health">Health Services</option>
                <option value="legal">Legal & Court</option>
                <option value="general">General Question</option>
              </select>
            </div>
            <div>
              <label for="urgency" class="block text-sm font-medium text-slate-700 mb-2">
                Urgency Level
              </label>
              <select 
                id="urgency" 
                name="urgency"
                class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              >
                <option value="general">General Information</option>
                <option value="soon">Need Answer Soon (within 48 hours)</option>
                <option value="urgent">Urgent (within 24 hours)</option>
              </select>
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-slate-700 mb-2">
              Question Subject *
            </label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Brief summary of your question"
            />
          </div>

          <div>
            <label for="question" class="block text-sm font-medium text-slate-700 mb-2">
              Your Question *
            </label>
            <textarea 
              id="question" 
              name="question" 
              rows="6"
              required
              class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Please provide as much detail as possible about your question..."
            ></textarea>
          </div>

          <div>
            <label for="context" class="block text-sm font-medium text-slate-700 mb-2">
              Additional Context
            </label>
            <textarea 
              id="context" 
              name="context" 
              rows="4"
              class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Any additional information that might help us answer your question..."
            ></textarea>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="john@example.com"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">
                Phone Number (Optional)
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="(555) 123-4567"
              />
            </div>
          </div>

          <div class="bg-indigo-50 border border-indigo-200 rounded-xl p-4">
            <h4 class="font-semibold text-indigo-900 mb-2">Response Information</h4>
            <ul class="text-sm text-indigo-800 space-y-1">
              <li>â€¢ General questions: Response within 2-3 business days</li>
              <li>â€¢ Urgent questions: Response within 24 hours</li>
              <li>â€¢ Complex questions may require additional research</li>
              <li>â€¢ All responses are provided by trained civic experts</li>
              <li>â€¢ Free service for all residents</li>
            </ul>
          </div>

          <div class="flex items-center">
            <input 
              type="checkbox" 
              id="notifications" 
              name="notifications"
              class="mr-2"
            />
            <label for="notifications" class="text-sm text-slate-700">
              Send me updates about civic services and life events
            </label>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <button 
              type="submit" 
              class="px-8 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700 transition-colors"
            >
              Submit Question
            </button>
            <button 
              type="button" 
              class="px-8 py-3 bg-slate-200 text-slate-700 rounded-xl font-semibold hover:bg-slate-300 transition-colors"
            >
              Browse More FAQs
            </button>
          </div>
        </form>
      </section>

    </div>
  </main>

  <script>
    document.getElementById('questionForm')?.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Question submitted successfully! You will receive a response within 2-3 business days.');
    });
  </script>
</Layout>
